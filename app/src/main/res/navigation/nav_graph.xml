<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.tp1singleviewapp.view.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">
        <action
            android:id="@+id/first_to_viewmodel"
            app:destination="@id/viewModelFragment" />
        <action
            android:id="@+id/first_to_info"
            app:destination="@id/SecondFragment" />
    </fragment>

    <fragment
        android:id="@+id/viewModelFragment"
        android:name="com.example.tp1singleviewapp.view.ViewModelFragment"
        android:label="@string/viewmodel_fragment_label"
        tools:layout="@layout/fragment_view_model">
        <action
            android:id="@+id/viewmodel_to_second"
            app:destination="@id/SecondFragment" />
        <argument
            android:name="user"
            app:argType="com.example.tp1singleviewapp.model.User"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.tp1singleviewapp.view.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">
        <action
            android:id="@+id/second_to_music"
            app:destination="@id/MusicFragment" />
        <argument
            android:name="user"
            app:argType="com.example.tp1singleviewapp.model.User"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/MusicFragment"
        android:name="com.example.tp1singleviewapp.view.MusicFragment"
        android:label="@string/music_fragment_label"
        tools:layout="@layout/fragment_music">
    </fragment>
</navigation>